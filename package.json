{
  "name": "simple-tr8n",
  "version": "1.1.1",
  "description": "Really simple JavaScript (TypeScript) library for translating user-facing messages.",
  "keywords": ["translations", "i18n", "internationalization"],
  "homepage": "https://github.com/Lindurion/simple-tr8n-js#readme",
  "bugs": {
    "url": "https://github.com/Lindurion/simple-tr8n-js/issues"
  },
  "license": "Apache-2.0",
  "author": "Eric Barndollar",
  "type": "module",
  "sideEffects": false,
  "files": ["out/lib/**/*"],
  "main": "./out/lib/index.js",
  "types": "./out/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./out/lib/index.d.ts",
      "default": "./out/lib/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lindurion/simple-tr8n-js.git"
  },
  "scripts": {
    "check": "gts check",
    "compile-test": "tsc",
    "compile-lib": "tsc --project tsconfig.lib.json",
    "fix": "gts fix",
    "posttest": "gts check",
    "prepare": "tsc --project tsconfig.lib.json",
    "pretest": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^16.11.47",
    "gts": "^4.0.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=16.10.0"
  }
}
