{
  "name": "simple-tr8n",
  "version": "1.1.1",
  "description": "Really simple JavaScript (TypeScript) library for translating user-facing messages.",
  "keywords": [
    "translations",
    "i18n",
    "internationalization"
  ],
  "homepage": "https://github.com/Lindurion/simple-tr8n-js#readme",
  "bugs": {
    "url": "https://github.com/Lindurion/simple-tr8n-js/issues"
  },
  "license": "Apache-2.0",
  "author": "Eric Barndollar",
  "type": "module",
  "sideEffects": false,
  "files": [
    "out/lib/**/*"
  ],
  "main": "./out/lib/index.js",
  "types": "./out/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./out/lib/index.d.ts",
      "default": "./out/lib/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lindurion/simple-tr8n-js.git"
  },
  "scripts": {
    "check": "gts check",
    "compile-test": "tsc",
    "compile-lib": "tsc --project tsconfig.lib.json",
    "fix": "gts fix",
    "posttest": "gts check",
    "prepare": "tsc --project tsconfig.lib.json",
    "pretest": "tsc",
    "test": "cross-env NODE_OPTIONS=--loader=ts-node/esm jasmine --config=jasmine.json"
  },
  "devDependencies": {
    "@types/jasmine": "^4.0.3",
    "@types/node": "^16.11.47",
    "cross-env": "^7.0.3",
    "gts": "^4.0.0",
    "jasmine": "^4.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=16.10.0"
  }
}
